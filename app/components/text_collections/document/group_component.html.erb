<div class="group">
  <h2 class="group-key"><%= @group.key %> (<%= @group.total %> item<%= 's' if @group.total > 1 %>)</h2>
  <%- if @group_limit > 0 && @group.total > @group_limit %>
    <h3>Sample Text Match <%= @view_context.link_to t('blacklight.search.group.more'), add_group_facet_params_and_redirect(@group), class: 'more-in-group' %></h3>
  <%- end %>
  <div class="grouped-documents">
    <%= grouped_documents %>
  </div>
</div>
